APP="alewordfire"

BUILD_HOST="167.71.122.152"
BUILD_USER="root"
BUILD_AT="/root/aleword_build"

PRODUCTION_HOSTS="167.71.122.152" 
PRODUCTION_USER="root" 
DELIVER_TO="/root/aleword_release" 

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/root/aleword_config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}

pre_erlang_clean_compile() {
  status "Installing NPM dependencies"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT/assets'
    yarn install $SILENCE
  "

  status "Building static files"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT/assets'
    mkdir -p priv/static
    yarn deploy $SILENCE
  "

  status "Running phoenix.digest"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT'
    APP='$APP' MIX_ENV='$TARGET_MIX_ENV' $MIX_CMD phx.digest $SILENCE
  "
}

pre_start_deployed_release() {
  symlink_static
}

# Symlink static assets from released app dir to the server
symlink_static(){
  status "Symlinking static assets path"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e
    ln -sfn $DELIVER_TO/$APP/lib/$APP-$RELEASE$VERSION/priv/static $DELIVER_TO/$APP/priv/static
  "
}
